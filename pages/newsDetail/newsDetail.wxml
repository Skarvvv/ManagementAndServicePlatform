<!--pages/newsDetail/newsDetail.wxml-->
<view class="container">
  <image class="news-image" src="{{news.nimg}}"></image>
  <view class="fix">
    <text class="title">{{news.nname}}</text>
    <view class="info">
      <view class="author-info">
        <text class="author-name">authorï¼š{{news.dname}} </text>
        <text class="author-date"> published in: {{news.ntime}} </text>
      </view>
    </view> 
  </view>
  <button open-type="share" id="btnId" style="display:none"></button>
  <view style="border-bottom:1rpx solid #707070;width:100%"></view>
  <view decode="true" class="detail" user-select="true">{{news.ncontent}}</view>
</view>


